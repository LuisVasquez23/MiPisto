<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FondosFragment"
    android:padding="40dp"
    android:orientation="vertical">

    <!-- Fondos Actuales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewFondosActuales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fondos Actuales: $1000"
            android:textSize="20sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- BotÃ³n para agregar fondos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnAgregarFondos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Fondos"
            android:layout_gravity="center" />

    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Gastos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewGastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gastos: $500"
            android:textSize="18sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Separador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Ahorros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewAhorros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ahorros: $500"
            android:textSize="18sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
