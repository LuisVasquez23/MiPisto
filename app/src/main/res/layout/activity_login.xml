<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mi_linear"
        android:layout_width="230dp"
        android:layout_height="240dp"
        android:background="@drawable/fondo"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/mi_imagen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/login1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio de sesi칩n"
            android:textSize="30sp"
            android:textFontWeight="@integer/material_motion_duration_long_2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp">


        <EditText
            android:id="@+id/correo_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Correo Electronico"
            android:paddingStart="16dp"
            android:background="@drawable/edittext"
            android:autofillHints="false"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp">

        <EditText
            android:id="@+id/contra_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Contrase침a"
            android:paddingStart="16dp"
            android:background="@drawable/edittext"
            android:autofillHints="false"
            android:inputType="textPassword"
            android:maxLength="8" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/recuperarContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olvidaste tu contrase침a?"
            android:textColor="#244FBC"
            android:layout_marginTop="10sp"
            android:textSize="16sp"
            android:textStyle="italic"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20px">

        <Button
            android:id="@+id/btnInicioSesion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="10dp"
            android:text="Iniciar Sesi칩n"
            android:textSize="20sp"
            android:background="@drawable/rounded_button" />

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Registro"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            />

    </LinearLayout>

</LinearLayout>