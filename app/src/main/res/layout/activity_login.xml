<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mi_linear"
        android:layout_width="230dp"
        android:layout_height="240dp"
        android:background="@drawable/fondo"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/mi_imagen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/login1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio de sesi칩n"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/correo" />

        <EditText
            android:id="@+id/correo_login"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="Correo Electronico"
            android:autofillHints="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/contra" />

        <EditText
            android:id="@+id/contra_login"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="Contrase침a"
            android:autofillHints="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/recuperarContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olvidaste tu contrase침a?"
            android:textColor="#0043F0"
            android:layout_marginTop="10sp"
            android:textStyle="italic"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnInicioSesion"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Iniciar Sesi칩n"
            android:textSize="24sp"
            android:background="#394867"
            />
    </LinearLayout>

</LinearLayout>