<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Categoria:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/accederFondos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/fondoPrincipal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/inicio_din" />

            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="x categoria"
                android:textColor="@color/white"
                android:textSize="48sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewNoTransacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay transacciones agregadas"
        android:textAppearance="?android:textAppearanceMedium"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />
    <!-- Quiero aca poner tres textso que quepa en una linea descripcion data y amount-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewData"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Data: "
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewAmount"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Amount: "
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Descripción: "

            android:textStyle="bold" />





    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearTransacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Las vistas de las transacciones se generarán aquí dinámicamente -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/btnAñadirTransacion"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:src="@drawable/mas_icon"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>
